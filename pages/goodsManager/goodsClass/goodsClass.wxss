/*总体主盒子*/  
.container {  
  position: relative;  
  width: 100%;  
  height: 100%;  
  background-color: #fff;  
  color: #939393;  
}
 
/*右侧栏主盒子*/  
.nav_right{  
  /*右侧盒子使用了绝对定位*/  
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;  
  /*宽度75%，高度占满，并使用百分比布局*/  
  width: 100%;  
  height: 1000px;  
   padding: 5px;  
  box-sizing: border-box;   
  background: #fff;  
}  
/*右侧栏list的item*/  
.nav_right .nav_right_items{  
  /*浮动向左*/  
  float: left;  
  /*每个item设置宽度是33.33%*/  
  width: 100%;  
  height: 480rpx;  
  text-align: left;  
}  
.nav_right .nav_right_items image{  
  /*被图片设置宽高*/  
  width: 100%;  
  height: 380rpx;  
   margin-top: 40px;   
}  

