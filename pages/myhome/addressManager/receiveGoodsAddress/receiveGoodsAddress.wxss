/**index.wxss**/
.container{
  margin-top: 10rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  background-color: #fff;
}
.formId{
  position: relative;
    margin-top: -200rpx;
  margin-left: -150rpx;
}

.input {
  padding-top: 10rpx;
  width: 100%;
  border-width: 5rpx;
}

.input input {
  width: 100%;
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx 20rpx;
}
.applyRefereeBtn{
  width: 150%;
  height: 80rpx;
  background-color:red;
  text-align: center;
  color:white;
  margin:0 auto;
  
}


.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: #ff0;
}


.citybody {
  position: fixed;
  bottom: 0px;
}

.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 5;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #828282;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #10FF10;
}

.section .picker {
  background-color: #fff;
  border-bottom: 2px #cccccc solid;
  border-top: 2px #d9d9d9 solid;
  padding: 20rpx;
}
