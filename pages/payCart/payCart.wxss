/**/
/*主容器*/  
.stepper {  
    width: 150rpx;  
    height: 51rpx;  
    /*给主容器设一个边框*/  
    border: 1px solid #ccc;  
    border-radius: 3px;  
    /* margin:0 auto;   */
    margin: left;
      display: block;

  line-height: 40rpx;
  font-size: 30rpx;
  margin: 10rpx;
}  
  
/*加号和减号*/  
.stepper text {  
    width: 19px;  
    line-height: 45rpx;  
    text-align: center;  
    float: left;  
}  
  
/*数值*/  
.stepper input {  
    width: 40px;  
    height: 26px;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 12px;  
    /*给中间的input设置左右边框即可*/  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  
.goods_type{
  width: 60%;
  border: 1px solid #f44336; 
